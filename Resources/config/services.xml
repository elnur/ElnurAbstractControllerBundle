<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="controller.class">Elnur\ControllerBundle\AbstractController</parameter>
    </parameters>

    <services>
        <service id="elnur.controller.abstract" class="%controller.class%" abstract="true">
            <call method="setFormFactory">
                 <argument type="service" id="form.factory"/>
            </call>
            <call method="setRouter">
                 <argument type="service" id="router"/>
            </call>
            <call method="setTranslator">
                 <argument type="service" id="translator"/>
            </call>
            <call method="setSecurityContext">
                 <argument type="service" id="security.context"/>
            </call>
        </service>
    </services>
</container>
